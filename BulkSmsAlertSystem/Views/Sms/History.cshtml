@model BulkSmsAlertSystem.Models.SmsMessage

@{
    ViewData["Title"] = "History";
}

<h1>History</h1>

<div><a asp-action="Index">Back to List</a></div>

<dl class="row">
    <dt class="col-sm-2">Recipient:</dt>
    <dd class="col-sm-10">@Model.RecipientNumber</dd>
    <br />
    <dt class="col-sm-2">Message:</dt>
    <dd class="col-sm-10">@Model.Message</dd>
    <br />
    <dt class="col-sm-2">Date Sent:</dt>
    <dd class="col-sm-10">@Model.DateSent.ToShortDateString()</dd>
    <br />
</dl>

